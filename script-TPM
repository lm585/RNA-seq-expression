awk 'BEGIN{
     FS = "\t"
     OFS = ""
     ORS = ""
          } 
    {
     if(NR == 1)
     {
      split($0, arr, "\t")
      print arr[1] "\t" arr[2] "\t"  arr[3] "\t"  arr[4] "\t"
      print "\n"
     }
     else if (NR == 2)
     {
      print $0  "\n"
     }
     else
     {
      print $1 "\t"
      for(i = 2; i <= NF; i++)
      {
       print $i/arr[i]*1000000 "\t"
      }
      print "\n"
     }
    }
    ' 20181017_HVTN505.gene_count.raw.tab.txt 

